{{!< default}}

{{#post}}
{{#get "tags" filter="slug:[{{slug}}]" limit=1}}
{{#if tags}}
  {{#foreach tags}}
<div class="n-archive__wrap">
  <div class="n-container mx-auto">
    <h1 class="c-archive__title">{{name}}</h1>
  </div>
</div>
