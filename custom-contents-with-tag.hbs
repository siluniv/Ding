{{#get "posts" filter="tag:[{{slug}}]" include="tags,authors" limit=@custom.shop_posts_per_page order="published_at desc"}}
  {{#if posts}}
<div class="n-container n-container__responsive mx-auto n-archive__list--wrap">
  <div class="n-archive__list js-grid">
  {{#foreach posts}}
    {{> post-card }}
  {{/foreach}}
  </div>
  <div class="n-archive__load">
